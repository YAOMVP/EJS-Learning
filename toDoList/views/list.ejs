    <title>toDoList</title>
</head>

<body>
    <h1>HAPPY DAY, haha Happy everyday!</h1>
    <h1>
        <%= kindOfDay %>
    </h1>
    <ul>

        <!-- newListItems it is the key that contains the value of 'inputs'  -->
        <% for(let i =0; i<newListItems.length;i++){ %>
            <li>
                <%= newListItems[i]  %>
            </li>
            <% } %>

    </ul>

    <form action="/" method="post">
        <input type="text" name="newItem">
        <button type="submit" type="submit">Add</button>
    </form>

</body>

</html>