<%- include("partials/header"); -%>

    <h1>
        Home
    </h1>

    <p>
        <%= home %>
    </p>



    <% posts.forEach(post=>{ %>

        <h1>
            <%= post.postTitle %>

        </h1>

        <p>

            <% if(post.postBody.length > 100 ){ %>
                <%= post.postBody.substring(0,100) + " ..."; %>
                    <a href="/posts/<%= post.postTitle %>">Read More</a>
                    <% } else {%>
                        <%= post.postBody %>
                            <a href="/posts/<%= post.postTitle %>">Read More</a>
                            <%  } %>
        </p>

        <%   }); %>

            <%- include("partials/footer"); -%>